# SillyChat 环境变量配置示例
# 复制此文件为 .env 并填写实际值

# ============================================
# AI 模型 API 密钥
# ============================================

# Anthropic Claude API
ANTHROPIC_API_KEY=your-anthropic-api-key-here

# OpenAI API
OPENAI_API_KEY=your-openai-api-key-here

# OpenClaw API (可选)
OPENCLAW_API_KEY=your-openclaw-api-key-here

# ============================================
# 网关服务配置
# ============================================

# 服务端口
GATEWAY_PORT=8080

# 服务主机
GATEWAY_HOST=localhost

# 最大连接数
MAX_CONNECTIONS=100

# 心跳间隔 (毫秒)
HEARTBEAT_INTERVAL=30000

# ============================================
# 存储配置
# ============================================

# 数据目录路径
DATA_PATH=./data

# 数据库路径
DATABASE_PATH=./data/chat.db

# Blob 存储路径
BLOB_POOL_PATH=./data/blobs

# 启用数据库加密
ENABLE_ENCRYPTION=true

# ============================================
# 安全配置
# ============================================

# JWT 密钥 (生产环境请使用强随机字符串)
JWT_SECRET=your-jwt-secret-key-minimum-32-characters

# JWT 过期时间
JWT_EXPIRES_IN=7d

# 加密密钥 (用于数据库加密)
ENCRYPTION_KEY=your-encryption-key-32-characters

# ============================================
# 日志配置
# ============================================

# 日志级别 (debug, info, warn, error)
LOG_LEVEL=info

# 日志文件路径
LOG_FILE=./logs/app.log

# ============================================
# 开发配置
# ============================================

# 环境模式 (development, production, test)
NODE_ENV=development

# 启用调试模式
DEBUG=false

# 热重载
HOT_RELOAD=true

# ============================================
# 可选: 云端同步配置
# ============================================

# 同步服务器 URL
# SYNC_SERVER_URL=https://sync.sillychat.io

# 同步间隔 (分钟)
# SYNC_INTERVAL=15

# ============================================
# 可选: 监控配置
# ============================================

# 启用指标收集
# ENABLE_METRICS=true

# 指标端口
# METRICS_PORT=9090
