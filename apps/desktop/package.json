{
  "name": "sillychat-desktop",
  "version": "1.0.0",
  "description": "SillyChat - Windows桌面端",
  "main": "dist/main/index.js",
  "scripts": {
    "dev": "npm run build:preload && electron .",
    "build": "npm run build:main && npm run build:preload && npm run build:renderer",
    "build:main": "tsc -p src/main/tsconfig.json",
    "build:preload": "tsc -p src/preload/tsconfig.json",
    "build:renderer": "vite build src/renderer",
    "pack": "electron-builder --dir",
    "dist": "electron-builder",
    "dist:win": "electron-builder --win",
    "dist:mac": "electron-builder --mac",
    "dist:mac:universal": "electron-builder --mac --universal",
    "dist:mac:x64": "electron-builder --mac --x64",
    "dist:mac:arm64": "electron-builder --mac --arm64",
    "postinstall": "electron-builder install-app-deps",
    "lint": "eslint src --ext .ts,.tsx"
  },
  "dependencies": {
    "@sillychat/core": "file:../../",
    "electron-log": "^5.0.1",
    "electron-updater": "^6.1.7"
  },
  "devDependencies": {
    "@types/node": "^20.10.4",
    "@vitejs/plugin-react": "^4.2.1",
    "electron": "^28.1.0",
    "electron-builder": "^24.9.1",
    "react": "^18.2.0",
    "react-dom": "^18.2.0",
    "typescript": "^5.3.3",
    "vite": "^5.0.10"
  }
}
