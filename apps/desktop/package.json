{
  "name": "sillychat-desktop",
  "version": "1.0.0",
  "description": "SillyChat - Windows桌面端",
  "main": "dist/main/index.js",
  "scripts": {
    "dev": "npm run build:preload && electron .",
    "build": "npm run build:main && npm run build:preload && npm run build:renderer",
    "build:main": "tsc -p src/main/tsconfig.json",
    "build:preload": "tsc -p src/preload/tsconfig.json",
    "build:renderer": "vite build src/renderer",
    "pack": "electron-builder --dir",
    "dist": "electron-builder",
    "dist:win": "electron-builder --win",
    "dist:mac": "electron-builder --mac",
    "dist:mac:universal": "electron-builder --mac --universal",
    "dist:mac:x64": "electron-builder --mac --x64",
    "dist:mac:arm64": "electron-builder --mac --arm64",
    "postinstall": "electron-builder install-app-deps",
    "lint": "eslint src --ext .ts,.tsx"
  },
  "dependencies": {
    "@sillychat/core": "file:../../",
    "electron-log": "^5.3.3",
    "electron-updater": "^6.6.2"
  },
  "devDependencies": {
    "@types/node": "^22.13.10",
    "@vitejs/plugin-react": "^4.3.4",
    "electron": "^35.1.4",
    "electron-builder": "^26.0.12",
    "react": "^19.1.0",
    "react-dom": "^19.1.0",
    "typescript": "^5.8.3",
    "vite": "^6.2.5"
  },
  "overrides": {
    "minimatch": "^10.0.1",
    "glob": "^11.0.1",
    "tar": "^7.5.0"
  }
}
