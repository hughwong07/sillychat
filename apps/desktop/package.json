{
  "name": "xsg-desktop",
  "version": "1.0.0",
  "description": "小傻瓜聊天工具 - Windows桌面端",
  "main": "dist/main/index.js",
  "scripts": {
    "dev": "npm run build:preload && electron .",
    "build": "npm run build:main && npm run build:preload && npm run build:renderer",
    "build:main": "tsc -p src/main/tsconfig.json",
    "build:preload": "tsc -p src/preload/tsconfig.json",
    "build:renderer": "vite build src/renderer",
    "pack": "electron-builder --dir",
    "dist": "electron-builder",
    "dist:win": "electron-builder --win",
    "dist:mac": "electron-builder --mac",
    "lint": "eslint src --ext .ts,.tsx"
  },
  "dependencies": {
    "@xiaoshagua/core": "file:../../",
    "electron-log": "^5.0.1",
    "electron-updater": "^6.1.7"
  },
  "devDependencies": {
    "@types/node": "^20.10.4",
    "@vitejs/plugin-react": "^4.2.1",
    "electron": "^28.1.0",
    "electron-builder": "^24.9.1",
    "react": "^18.2.0",
    "react-dom": "^18.2.0",
    "typescript": "^5.3.3",
    "vite": "^5.0.10"
  },
  "build": {
    "appId": "com.xiaoshagua.chat",
    "productName": "小傻瓜聊天工具",
    "directories": {
      "output": "release"
    },
    "files": [
      "dist/**/*",
      "assets/**/*",
      "package.json"
    ],
    "win": {
      "target": [
        {
          "target": "nsis",
          "arch": ["x64", "arm64"]
        },
        {
          "target": "portable",
          "arch": ["x64"]
        }
      ],
      "icon": "assets/icon.ico"
    },
    "mac": {
      "target": [
        {
          "target": "dmg",
          "arch": ["x64", "arm64"]
        }
      ],
      "icon": "assets/icon.icns",
      "category": "public.app-category.social-networking"
    },
    "nsis": {
      "oneClick": false,
      "allowToChangeInstallationDirectory": true,
      "createDesktopShortcut": true,
      "createStartMenuShortcut": true
    }
  }
}
