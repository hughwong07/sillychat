{
  "name": "xiaoshagua-chat",
  "version": "1.0.0",
  "description": "小傻瓜聊天工具 - AI原生聊天应用",
  "main": "dist/index.js",
  "type": "module",
  "engines": {
    "node": ">=22.12.0"
  },
  "scripts": {
    "build": "tsc && npm run copy-assets",
    "build:watch": "tsc --watch",
    "copy-assets": "echo 'No assets to copy'",
    "dev": "tsx src/index.ts",
    "dev:gateway": "tsx src/core/gateway/server.ts",
    "test": "vitest run",
    "test:watch": "vitest",
    "test:coverage": "vitest run --coverage",
    "lint": "eslint src/**/*.ts",
    "lint:fix": "eslint src/**/*.ts --fix",
    "format": "prettier --write \"src/**/*.ts\"",
    "format:check": "prettier --check \"src/**/*.ts\"",
    "clean": "rm -rf dist node_modules/.cache",
    "prepare": "husky install"
  },
  "dependencies": {
    "@anthropic-ai/sdk": "^0.32.0",
    "@types/node": "^22.13.5",
    "chalk": "^5.3.0",
    "commander": "^12.1.0",
    "dotenv": "^16.4.7",
    "express": "^4.21.2",
    "mime-types": "^2.1.35",
    "openai": "^4.85.4",
    "sqlite-vec": "^0.1.7-alpha.2",
    "ws": "^8.18.0",
    "yaml": "^2.7.0",
    "zod": "^3.23.8"
  },
  "devDependencies": {
    "@types/express": "^5.0.0",
    "@types/mime-types": "^2.1.4",
    "@types/ws": "^8.5.14",
    "@typescript-eslint/eslint-plugin": "^8.24.1",
    "@typescript-eslint/parser": "^8.24.1",
    "eslint": "^9.21.0",
    "eslint-config-prettier": "^10.0.1",
    "eslint-plugin-import": "^2.31.0",
    "husky": "^9.1.7",
    "lint-staged": "^15.4.3",
    "prettier": "^3.5.2",
    "tsx": "^4.19.3",
    "typescript": "^5.7.3",
    "vitest": "^3.0.7"
  },
  "lint-staged": {
    "*.ts": [
      "eslint --fix",
      "prettier --write"
    ]
  },
  "keywords": [
    "ai",
    "chat",
    "openclaw",
    "multi-agent",
    "local-first"
  ],
  "author": "小傻瓜团队",
  "license": "MIT"
}
